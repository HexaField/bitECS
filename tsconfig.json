{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
    ],
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "exclude": [
    "**/node_modules/**",
    "**/*.test.ts",
    "**/*.test.js"
  ],
  "include": [
    "./**/*.ts"
  ]
}
